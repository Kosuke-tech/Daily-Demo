{{ 'c_css_product-point.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top_pc }}px);
      padding-bottom: calc({{ section.settings.padding_bottom_pc }}px);
    }

  @media screen and (max-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top_sp }}px;
        padding-bottom: {{ section.settings.padding_bottom_sp }}px;
      }
    }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding page-width">
  <div
    class="c_product-point color-{{ section.settings.color_scheme }}"
    style="background-color: rgb(var(--color-background), .85) ;"
  >
    <div class="c_product-point__inner">
      <h2 class="c_product-point__title">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14" fill="none">
          <path d="M11.9303 6.86469C10.5503 5.80469 7.07031 1.90469 7.00031 1.80469C6.95031 1.90469 3.68031 5.54469 2.07031 6.86469C3.58031 8.09469 6.71031 11.5447 7.00031 12.1947C7.29031 11.5447 10.4303 8.02469 11.9303 6.86469Z" fill="#FFFBF7"/>
        </svg>
        {{ section.settings.title }}
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14" fill="none">
          <path d="M11.9303 6.86469C10.5503 5.80469 7.07031 1.90469 7.00031 1.80469C6.95031 1.90469 3.68031 5.54469 2.07031 6.86469C3.58031 8.09469 6.71031 11.5447 7.00031 12.1947C7.29031 11.5447 10.4303 8.02469 11.9303 6.86469Z" fill="#FFFBF7"/>
        </svg>
      </h2>
      <ul class="c_product-point__list">
        {% for block in section.blocks %}
          <li class="c_product-point__item">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="24" viewBox="0 0 32 24" fill="none">
              <path d="M15.6332 19.7332C14.0749 19.7332 12.4441 19.3226 10.7508 18.5C10.5693 18.4121 10.4909 18.1864 10.5751 17.997C10.6594 17.8077 10.8758 17.7243 11.0573 17.8137C14.0401 19.262 16.8022 19.3544 19.2666 18.0879C22.5805 16.3851 25.1726 12.2903 26.4041 6.82589C21.4695 4.66407 16.7891 4.4338 13.5231 6.20325C11.1081 7.51064 9.55135 9.84667 8.89496 13.1462C8.85429 13.3507 8.66261 13.4825 8.46511 13.4401C8.26906 13.3977 8.14273 13.1977 8.18339 12.9917C8.88626 9.45733 10.5694 6.94707 13.1877 5.52909C16.7093 3.62178 21.7324 3.8869 26.969 6.25323C27.1288 6.32595 27.2174 6.50622 27.1796 6.68347C25.9278 12.5251 23.1614 16.929 19.5861 18.7666C18.3314 19.4105 17.0113 19.7332 15.6317 19.7332H15.6332Z" fill="#FFFBF7"/>
              <path d="M5.17522 19.1166C5.06921 19.1166 4.96317 19.0681 4.89202 18.9741C4.76713 18.8105 4.79183 18.5727 4.94867 18.4424C6.82201 16.8775 9.43017 15.2232 11.928 14.0158C14.0322 12.9992 17.0542 11.8115 19.5128 11.9357C19.7132 11.9463 19.8671 12.1236 19.8584 12.3327C19.8497 12.5357 19.6885 12.6932 19.4954 12.6932C19.4895 12.6932 19.4837 12.6932 19.4779 12.6932C18.2043 12.6296 15.9128 12.925 12.2344 14.7035C9.78739 15.8867 7.23446 17.5047 5.40468 19.0332C5.33788 19.0893 5.258 19.1166 5.17813 19.1166H5.17522Z" fill="#FFFBF7"/>
